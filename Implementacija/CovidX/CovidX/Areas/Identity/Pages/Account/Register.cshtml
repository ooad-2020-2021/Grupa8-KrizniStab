@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<style type="text/css">
    .form-group {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
    }
    .row {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
    }
    .col-md-4 {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
    }
    .btn btn-primary {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
    }
</style>
<div style="text-align:center; background-color:aliceblue">
        <h1>Kreirajte račun.</h1>
        <div class="row" >
            <div class="col-md-4">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.ime">Ime</label>
                        <input asp-for="Input.ime" class="form-control" />
                        <span asp-validation-for="Input.ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.prezime">Prezime</label>
                        <input asp-for="Input.prezime" class="form-control" />
                        <span asp-validation-for="Input.prezime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.jmbg">JMBG</label>
                        <input asp-for="Input.jmbg" class="form-control" />
                        <span asp-validation-for="Input.jmbg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.datumRodjenja">Datum rođenja</label>
                        <input asp-for="Input.datumRodjenja" class="form-control" />
                        <span asp-validation-for="Input.datumRodjenja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.telefon">Telefon</label>
                        <input asp-for="Input.telefon" class="form-control" />
                        <span asp-validation-for="Input.telefon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.spol">Spol (Muski/Zenski)</label>
                        <input asp-for="Input.spol" class="form-control" />
                        <span asp-validation-for="Input.spol" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PotvrditePassword"></label>
                        <input asp-for="Input.PotvrditePassword" class="form-control" />
                        <span asp-validation-for="Input.PotvrditePassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Kreiraj</button>
                </form>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
