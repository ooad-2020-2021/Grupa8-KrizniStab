
@{
    ViewData["Title"] = "UnosMedicinskogOsoblja";
}

@model CovidX.Models.MedicinskaSestra

<h4>MedicinskoOsoblje</h4>
<hr />

@using (Html.BeginForm())

{
    <form asp-action="AdminView" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <table style="width:100%">
            <tr>
                <th>
                    <div class="form-group">
                        <label asp-for="ime" class="control-label"></label>
                        <input asp-for="ime" class="form-control"></input>
                        <span asp-validation-for="ime" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        <label asp-for="prezime" class="control-label"></label>
                        <input asp-for="prezime" class="form-control" />
                        <span asp-validation-for="prezime" class="text-danger"></span>
                    </div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="form-group">
                        <label asp-for="jmbg" class="control-label"></label>
                        <input asp-for="jmbg" class="form-control" />
                        <span asp-validation-for="jmbg" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        <label asp-for="lokacija" class="control-label"></label>
                        <input asp-for="lokacija" class="form-control" />
                        <span asp-validation-for="lokacija" class="text-danger"></span>
                    </div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="form-group">
                        <label asp-for="mail" class="control-label"></label>
                        <input type="email" asp-for="mail" class="form-control" />
                        <span asp-validation-for="mail" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                </th>
            </tr>
            <tr>
                <th>
                    <div class="form-group">
                        <label asp-for="datumRodjenja" class="control-label"></label>
                        <input type="datetime" asp-for="datumRodjenja" class="form-control" />
                        <span asp-validation-for="datumRodjenja" class="text-danger"></span>
                    </div>
                </th>
                <th>

                    <div class="form-group">
                        <label asp-for="telefon" class="control-label"></label>
                        <input asp-for="telefon" class="form-control" />
                        <span asp-validation-for="telefon" class="text-danger"></span>
                    </div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="form-group">
                        <label asp-for="spol" class="control-label"></label>
                        <input asp-for="spol" class="form-control" />
                        <span asp-validation-for="spol" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </th>
            </tr>
        </table>




    </form>
    @using (Html.BeginForm("AdminView", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Kreiraj" class="btn btn-primary" />
    }

    <div>
        <a asp-action="AdminView">Nazad</a>
    </div>

}


